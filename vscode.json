// Place your settings in this file to overwrite the default settings here-
{
    "editor.fontSize": 14,
    "window.zoomLevel": -0.1,
    "editor.tabSize": 3,
    "terminal.integrated.fontFamily": "Roboto Mono for Powerline",
    
    "editor.renderLineHighlight": "none",
    "workbench.iconTheme": "file-icons",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.matchBrackets": false,
    "workbench.colorCustomizations": {
        "statusBar.background" : "#1A1A1A",
        "statusBar.noFolderBackground" : "#212121",
        "statusBar.debuggingBackground": "#263238",
        // Scrollbar color
        "scrollbarSlider.background": "#161719",
        "scrollbarSlider.activeBackground": "#161719",
        "scrollbarSlider.hoverBackground": "#161719",
        "sideBar.background": "#161719",
        // List and Trees rgb(29, 31, 33)
        "list.hoverBackground": "#1D1F21",
        "list.activeSelectionBackground": "#1D1F21",
        "list.inactiveSelectionBackground": "#1D1F21",
        // Terminal Colors
        "terminal.ansiBrightMagenta": "#DD82CD",
        "terminal.ansiBrightCyan": "#2892D7"
    },
    "editor.selectionHighlight": true,
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "workbench.colorTheme": "Base16 Dark Tomorrow",
    "git.confirmSync": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": true,
    "workbench.startupEditor": "welcomePage"
}

